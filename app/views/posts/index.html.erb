<%= link_to "New", action: :new %>
<% if @posts.present? %>
<table>
  <caption>Posts</caption>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>body</th>
      <th>creator</th>
      <th>updater</th>
      <th>deleter</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to_if post.deleted?.!, post.id, action: :edit, id: post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.creator&.name %></td>
      <td><%= post.updater&.name %></td>
      <td><%= post.deleter&.name %></td>
      <td><%= button_to "Delete", { action: :destroy, id: post.id }, { method: :delete, disabled: post.deleted? } %></td>
    </tr>
    <% end %>
  </tbody>
</table
<% end %>
